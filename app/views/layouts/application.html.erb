<!DOCTYPE html>
<html>
  <head>
    <title>Authentication</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body style="text-align: center">
    <div><%= notice %></div>
    <div><%= alert %></div>

    <% if session[:user_id] %>
      <div style="text-align: end"><%= button_to "Sign out", login_url(session[:user_id]), method: :delete %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
